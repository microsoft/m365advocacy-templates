{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceBaseName": {
      "value": "bot${{RESOURCE_SUFFIX}}"
    },
    "webAppSKU": {
      "value": "B1"
    },
    "botDisplayName": {
      "value": "${{APP_DISPLAY_NAME}}"
    },
    "apiEntraAppClientId": {
      "value": "${{ENTRA_API_ID}}"
    },
    "apiEntraAppClientSecret": {
      "value": "${{SECRET_ENTRA_API}}"
    },
    "apiEntraAppTenantId": {
      "value": "${{ENTRA_API_TENANT_ID}}"
    },
    "languageModelName": {
      "value": "${{LANGUAGE_MODEL_NAME}}"
    },
    "languageModelEndpoint": {
      "value": "${{LANGUAGE_MODEL_ENDPOINT}}"
    },
    "languageModelApiKey": {
      "value": "${{SECRET_LANGUAGE_MODEL_API_KEY}}"
    }
  }
}